.PP_Hovercard
// ------------------------
//    Base Styles
// ------------------------
	cursor: pointer
	position: relative

	&, a
		color: white
		text-shadow: 0px .03em .05em transparentize(black, 0.33)

	a:hover
		text-decoration: none
		color: white

	.has-touch & &__popup
		display: none

.PP_Hovercard .PP_Entry
	&__thumbnail > img
		display: block
		max-width: 100%
		padding: 0
		margin: 0

	&__header
		position: absolute
		bottom: $p
		left: $p

		transform: translate3d(0,0,0)
		transition: transform .35s ease-out, opacity .3s ease

	&__title, &__subtitle
		color: white

	&__subtitle
		font-size: 1rem
		font-weight: 300
		text-transform: none
		margin-bottom: 1rem

	&__view
		font-size: 1rem
		display: block
		position: absolute
		bottom: 1rem
		text-transform: uppercase

	/*!
	*  Hovercard Layout
	*/
	&__more
		display: block
		position: absolute
		left: 0
		bottom: 0
		width: 100%
		height: 100%
		padding: $p

		background-color: transparentize(black, 0.5)

		opacity: 0

		transition: opacity .35s ease
		cursor: pointer

		// @TODO: Need a Z-Index manager
		z-index: 200


	&__inner
		width: 100%
		height: 100%
		transform: translateY(15px)
		opacity: 0
		display: block
		transition: transform .35s ease-out, opacity .3s ease

/*!
*   Hover State
*/
.PP_Hovercard:hover, &.PP--no-thumbnail, PP_Entry__more:hover

	.PP_Entry__header
		z-index: 550
		transform: translateY(-3rem)

	.PP_Entry__inner
		opacity: 1
		transform: translateY(0)

	.PP_Entry__more
		display: block
		opacity: 1

/*!
*   @TODO: Style scenarios with no thumbnail
*   @TODO: Add class `PP--no-thumbnail`
*/
&.PP--no-thumbnail
	height: 300px

	&__popup
		opacity: 1
