
.PPA_Metabox
	padding-top: .5rem
	border-top: 1px solid #eaeaea
	padding-bottom: @padding-top * 2
	margin-top: @padding-top
	margin-bottom: @padding-top
	border-bottom: @border-top

	input[type=text]
		width: 100%
		height: 2.5rem
		outline: none
		padding: .2em .4em
		font-size: 1.125em
	.cmb-th
		margin-bottom: .5em
		margin-top: .5em
		color: #666

	.cmb-th, .cmb-td
		max-width: 100%
		width: 100%
		margin-left: 0
		padding: 0




// CMB2 Gallery Styles
#pp_post_after_meta .cmb-type-file-list

	.cmb-td, .cmb-th
		width: 100%
		max-width: 100%